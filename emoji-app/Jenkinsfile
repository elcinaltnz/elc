pipeline {
    agent any

    environment {
        // Imaj ve Konteyner isimlerini projenle uyumlu hale getirdik
        IMAGE_NAME = "emoji-app"
        CONTAINER_NAME = "emoji-app-container"
        // server.js içindeki portun 4646 olduğu için her iki tarafı da eşitledik
        PORT = "4646"       // Dışarıdan erişilecek port
        APP_PORT = "4646"   // Konteyner içindeki port
    }

    stages {
        stage('Prepare & Clean') {
            steps {
                // Workspace temizliği yapıyoruz
                deleteDir()
                // Jenkins arayüzünde tanımladığın SCM ayarlarını kullanarak kodu çekiyoruz
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                // Kodlar emoji-app klasöründe olduğu için o dizine girip build alıyoruz
                dir('emoji-app') {
                    sh "docker build -t ${IMAGE_NAME}:latest ."
                }
            }
        }

        stage('Stop & Remove Old Container') {
            steps {
                // Eğer konteyner zaten çalışıyorsa hata vermeden kaldırır
                sh "docker rm -f ${CONTAINER_NAME} || true"
            }
        }

        stage('Run New Container') {
            steps {
                // Restart always ekledik ve portları eşitledik
                sh """
                docker run -d \
                --restart always \
                -p ${PORT}:${APP_PORT} \
                --name ${CONTAINER_NAME} \
                ${IMAGE_NAME}:latest
                """
            }
        }

        stage('Health Check') {
            steps {
                // Konteynerin durumunu konsola yazdırır
                sh "docker ps -f name=${CONTAINER_NAME}"
            }
        }
    }

    post {
        success {
            echo "✅ Tebrikler Elçin! Uygulama http://localhost:4646 adresinde yayında."
        }
        failure {
            echo "❌ Pipeline hata verdi! Lütfen Jenkins konsol çıktılarını incele."
        }
    }
}
